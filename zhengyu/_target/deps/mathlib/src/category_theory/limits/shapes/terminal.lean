  is_colimit c‚ÇÅ ‚âÉ is_colimit c‚ÇÇ :=
{ to_fun := Œª hl, is_colimit_change_empty_cocone C hl c‚ÇÇ h,
  inv_fun := Œª hl, is_colimit_change_empty_cocone C hl c‚ÇÅ h.symm,
  left_inv := by tidy,
  right_inv := by tidy }

