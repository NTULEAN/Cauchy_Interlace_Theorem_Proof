variables {D : Type u‚ÇÇ} [category.{v‚ÇÇ} D]

/-- A functor `F : T ‚•§ D` induces a functor `over X ‚•§ over (F.obj X)` in the obvious way. -/
@[simps]
def post (F : T ‚•§ D) : over X ‚•§ over (F.obj X) :=
{ obj := Œª Y, mk $ F.map Y.hom,
  map := Œª Y‚ÇÅ Y‚ÇÇ f,
  { left := F.map f.left,
    w' := by tidy; erw [‚Üê F.map_comp, w] } }

end

