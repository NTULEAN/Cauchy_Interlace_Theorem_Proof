  extends nat_trans F.to_functor G.to_functor :=
(unit' : F.Œµ ‚â´ app (ùüô_ C) = G.Œµ . obviously)
(tensor' : ‚àÄ X Y, F.Œº _ _ ‚â´ app (X ‚äó Y) = (app X ‚äó app Y) ‚â´ G.Œº _ _ . obviously)

restate_axiom monoidal_nat_trans.tensor'
