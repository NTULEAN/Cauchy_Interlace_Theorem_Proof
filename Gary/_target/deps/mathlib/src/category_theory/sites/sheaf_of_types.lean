  iterate 2 { erw ‚Üê functor_to_types.map_comp_apply, rw ‚Üê op_comp }, apply hx,
  simp [comm, h‚ÇÅ.some_spec.some_spec.some_spec.2, h‚ÇÇ.some_spec.some_spec.some_spec.2],
