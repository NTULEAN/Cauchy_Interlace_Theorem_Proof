(to_fun : Œπ ‚Üí C^‚àû‚üÆI, M; ùìò(‚Ñù), ‚Ñù‚üØ)
(locally_finite' : locally_finite (Œª i, support (to_fun i)))
(nonneg' : ‚àÄ i x, 0 ‚â§ to_fun i x)
(sum_eq_one' : ‚àÄ x ‚àà s, ‚àë·∂† i, to_fun i x = 1)
(sum_le_one' : ‚àÄ x, ‚àë·∂† i, to_fun i x ‚â§ 1)

