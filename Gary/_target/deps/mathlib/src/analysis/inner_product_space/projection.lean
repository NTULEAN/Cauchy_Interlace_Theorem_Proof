@[simp] lemma submodule.orthogonal_eq_bot_iff [complete_space (K : set E)] :
  K·óÆ = ‚ä• ‚Üî K = ‚ä§ :=
begin
  refine ‚ü®_, Œª h, by rw [h, submodule.top_orthogonal_eq_bot] ‚ü©,
  intro h,
