  let v : K‚ÇÅ := orthogonal_projection K‚ÇÅ x,
  have hvm : x - v ‚àà K‚ÇÅ·óÆ := sub_orthogonal_projection_mem_orthogonal x,
  split,
  { rintro ‚ü®y, hy, z, hz, rfl‚ü©,
    exact K‚ÇÇ.add_mem (h hy) hz.2 },
  { exact Œª hx, ‚ü®v, v.prop, x - v, ‚ü®hvm, K‚ÇÇ.sub_mem hx (h v.prop)‚ü©, add_sub_cancel'_right _ _‚ü© }
end

