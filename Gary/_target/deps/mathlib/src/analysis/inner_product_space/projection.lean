  rw maximal_orthonormal_iff_orthogonal_complement_eq_bot hv,
  have hv_compl : is_complete (span ùïú v : set E) := (span ùïú v).complete_of_finite_dimensional,
  rw submodule.orthogonal_eq_bot_iff,
