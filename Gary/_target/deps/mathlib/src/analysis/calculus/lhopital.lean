theorem lhopital_zero_at_top_on_Ioi
  (hff' : ‚àÄ x ‚àà Ioi a, has_deriv_at f (f' x) x) (hgg' : ‚àÄ x ‚àà Ioi a, has_deriv_at g (g' x) x)
  (hg' : ‚àÄ x ‚àà Ioi a, g' x ‚â† 0)
  (hftop : tendsto f at_top (ùìù 0)) (hgtop : tendsto g at_top (ùìù 0))
  (hdiv : tendsto (Œª x, (f' x) / (g' x)) at_top l) :
  tendsto (Œª x, (f x) / (g x)) at_top l :=
begin
  obtain ‚ü® a', haa', ha'‚ü© : ‚àÉ a', a < a' ‚àß 0 < a' :=
    ‚ü®1 + max a 0, ‚ü®lt_of_le_of_lt (le_max_left a 0) (lt_one_add _),
                   lt_of_le_of_lt (le_max_right a 0) (lt_one_add _)‚ü©‚ü©,
  have fact1 : ‚àÄ (x:‚Ñù), x ‚àà Ioo 0 a'‚Åª¬π ‚Üí x ‚â† 0 := Œª _ hx, (ne_of_lt hx.1).symm,
  have fact2 : ‚àÄ x ‚àà Ioo 0 a'‚Åª¬π, a < x‚Åª¬π,
    from Œª _ hx, lt_trans haa' ((lt_inv ha' hx.1).mpr hx.2),
  have hdnf : ‚àÄ x ‚àà Ioo 0 a'‚Åª¬π, has_deriv_at (f ‚àò has_inv.inv) (f' (x‚Åª¬π) * (-(x^2)‚Åª¬π)) x,
    from Œª x hx, comp x (hff' (x‚Åª¬π) $ fact2 x hx) (has_deriv_at_inv $ fact1 x hx),
  have hdng : ‚àÄ x ‚àà Ioo 0 a'‚Åª¬π, has_deriv_at (g ‚àò has_inv.inv) (g' (x‚Åª¬π) * (-(x^2)‚Åª¬π)) x,
    from Œª x hx, comp x (hgg' (x‚Åª¬π) $ fact2 x hx) (has_deriv_at_inv $ fact1 x hx),
  have := lhopital_zero_right_on_Ioo (inv_pos.mpr ha') hdnf hdng
    (by { intros x hx,
          refine mul_ne_zero _ (neg_ne_zero.mpr $ inv_ne_zero $ pow_ne_zero _ $ fact1 x hx),
          exact hg' _ (fact2 x hx) })
    (hftop.comp tendsto_inv_zero_at_top)
    (hgtop.comp tendsto_inv_zero_at_top)
    (by { refine (tendsto_congr' _).mp (hdiv.comp tendsto_inv_zero_at_top),
          rw eventually_eq_iff_exists_mem,
          use [Ioi 0, self_mem_nhds_within],
          intros x hx,
          unfold function.comp,
          erw mul_div_mul_right,
          refine neg_ne_zero.mpr (inv_ne_zero $ pow_ne_zero _ $ ne_of_gt hx) }),
  have := this.comp tendsto_inv_at_top_zero',
  unfold function.comp at this,
  simpa only [inv_inv‚ÇÄ],
end

theorem lhopital_zero_at_bot_on_Iio
  (hff' : ‚àÄ x ‚àà Iio a, has_deriv_at f (f' x) x) (hgg' : ‚àÄ x ‚àà Iio a, has_deriv_at g (g' x) x)
