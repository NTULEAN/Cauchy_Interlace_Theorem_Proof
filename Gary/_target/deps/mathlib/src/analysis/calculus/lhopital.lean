import analysis.calculus.mean_value

/-!
# L'H√¥pital's rule for 0/0 indeterminate forms

In this file, we prove several forms of "L'Hopital's rule" for computing 0/0
indeterminate forms. The proof of `has_deriv_at.lhopital_zero_right_on_Ioo`
is based on the one given in the corresponding
[Wikibooks](https://en.wikibooks.org/wiki/Calculus/L%27H%C3%B4pital%27s_Rule)
chapter, and all other statements are derived from this one by composing by
carefully chosen functions.

Note that the filter `f'/g'` tends to isn't required to be one of `ùìù a`,
`at_top` or `at_bot`. In fact, we give a slightly stronger statement by
allowing it to be any filter on `‚Ñù`.

Each statement is available in a `has_deriv_at` form and a `deriv` form, which
is denoted by each statement being in either the `has_deriv_at` or the `deriv`
namespace.

## Tags

L'H√¥pital's rule, L'Hopital's rule
-/

open filter set
open_locale filter topological_space pointwise

variables {a b : ‚Ñù} (hab : a < b) {l : filter ‚Ñù} {f f' g g' : ‚Ñù ‚Üí ‚Ñù}

/-!
## Interval-based versions

We start by proving statements where all conditions (derivability, `g' ‚â† 0`) have
to be satisfied on an explicitly-provided interval.
-/

namespace has_deriv_at

include hab

theorem lhopital_zero_right_on_Ioo
  (hff' : ‚àÄ x ‚àà Ioo a b, has_deriv_at f (f' x) x) (hgg' : ‚àÄ x ‚àà Ioo a b, has_deriv_at g (g' x) x)
  (hg' : ‚àÄ x ‚àà Ioo a b, g' x ‚â† 0)
  (hfa : tendsto f (ùìù[>] a) (ùìù 0)) (hga : tendsto g (ùìù[>] a) (ùìù 0))
  (hdiv : tendsto (Œª x, (f' x) / (g' x)) (ùìù[>] a) l) :
  tendsto (Œª x, (f x) / (g x)) (ùìù[>] a) l :=
begin
  have sub : ‚àÄ x ‚àà Ioo a b, Ioo a x ‚äÜ Ioo a b := Œª x hx, Ioo_subset_Ioo (le_refl a) (le_of_lt hx.2),
  have hg : ‚àÄ x ‚àà (Ioo a b), g x ‚â† 0,
  { intros x hx h,
    have : tendsto g (ùìù[<] x) (ùìù 0),
    { rw [‚Üê h, ‚Üê nhds_within_Ioo_eq_nhds_within_Iio hx.1],
      exact ((hgg' x hx).continuous_at.continuous_within_at.mono $ sub x hx).tendsto },
    obtain ‚ü®y, hyx, hy‚ü© : ‚àÉ c ‚àà Ioo a x, g' c = 0,
      from exists_has_deriv_at_eq_zero' hx.1 hga this (Œª y hy, hgg' y $ sub x hx hy),
    exact hg' y (sub x hx hyx) hy },
  have : ‚àÄ x ‚àà Ioo a b, ‚àÉ c ‚àà Ioo a x, (f x) * (g' c) = (g x) * (f' c),
  { intros x hx,
    rw [‚Üê sub_zero (f x), ‚Üê sub_zero (g x)],
    exact exists_ratio_has_deriv_at_eq_ratio_slope' g g' hx.1 f f'
      (Œª y hy, hgg' y $ sub x hx hy) (Œª y hy, hff' y $ sub x hx hy) hga hfa
      (tendsto_nhds_within_of_tendsto_nhds (hgg' x hx).continuous_at.tendsto)
      (tendsto_nhds_within_of_tendsto_nhds (hff' x hx).continuous_at.tendsto) },
  choose! c hc using this,
  have : ‚àÄ x ‚àà Ioo a b, ((Œª x', (f' x') / (g' x')) ‚àò c) x = f x / g x,
  { intros x hx,
    rcases hc x hx with ‚ü®h‚ÇÅ, h‚ÇÇ‚ü©,
    field_simp [hg x hx, hg' (c x) ((sub x hx) h‚ÇÅ)],
    simp only [h‚ÇÇ],
    rwa mul_comm },
  have cmp : ‚àÄ x ‚àà Ioo a b, a < c x ‚àß c x < x,
    from Œª x hx, (hc x hx).1,
  rw ‚Üê nhds_within_Ioo_eq_nhds_within_Ioi hab,
  apply tendsto_nhds_within_congr this,
  simp only,
  apply hdiv.comp,
  refine tendsto_nhds_within_of_tendsto_nhds_of_eventually_within _
    (tendsto_of_tendsto_of_tendsto_of_le_of_le' tendsto_const_nhds
      (tendsto_nhds_within_of_tendsto_nhds tendsto_id) _ _) _,
  all_goals
  { apply eventually_nhds_within_of_forall,
    intros x hx,
    have := cmp x hx,
    try {simp},
    linarith [this] }
end

theorem lhopital_zero_right_on_Ico
  (hff' : ‚àÄ x ‚àà Ioo a b, has_deriv_at f (f' x) x) (hgg' : ‚àÄ x ‚àà Ioo a b, has_deriv_at g (g' x) x)
  (hcf : continuous_on f (Ico a b)) (hcg : continuous_on g (Ico a b))
  (hg' : ‚àÄ x ‚àà Ioo a b, g' x ‚â† 0)
  (hfa : f a = 0) (hga : g a = 0)
  (hdiv : tendsto (Œª x, (f' x) / (g' x)) (nhds_within a (Ioi a)) l) :
  tendsto (Œª x, (f x) / (g x)) (nhds_within a (Ioi a)) l :=
begin
  refine lhopital_zero_right_on_Ioo hab hff' hgg' hg' _ _ hdiv,
  { rw [‚Üê hfa, ‚Üê nhds_within_Ioo_eq_nhds_within_Ioi hab],
    exact ((hcf a $ left_mem_Ico.mpr hab).mono Ioo_subset_Ico_self).tendsto },
  { rw [‚Üê hga, ‚Üê nhds_within_Ioo_eq_nhds_within_Ioi hab],
    exact ((hcg a $ left_mem_Ico.mpr hab).mono Ioo_subset_Ico_self).tendsto },
end

theorem lhopital_zero_left_on_Ioo
  (hff' : ‚àÄ x ‚àà Ioo a b, has_deriv_at f (f' x) x) (hgg' : ‚àÄ x ‚àà Ioo a b, has_deriv_at g (g' x) x)
  (hg' : ‚àÄ x ‚àà Ioo a b, g' x ‚â† 0)
  (hfb : tendsto f (nhds_within b (Iio b)) (ùìù 0)) (hgb : tendsto g (nhds_within b (Iio b)) (ùìù 0))
  (hdiv : tendsto (Œª x, (f' x) / (g' x)) (nhds_within b (Iio b)) l) :
  tendsto (Œª x, (f x) / (g x)) (nhds_within b (Iio b)) l :=
begin
  -- Here, we essentially compose by `has_neg.neg`. The following is mostly technical details.
  have hdnf : ‚àÄ x ‚àà -Ioo a b, has_deriv_at (f ‚àò has_neg.neg) (f' (-x) * (-1)) x,
    from Œª x hx, comp x (hff' (-x) hx) (has_deriv_at_neg x),
  have hdng : ‚àÄ x ‚àà -Ioo a b, has_deriv_at (g ‚àò has_neg.neg) (g' (-x) * (-1)) x,
    from Œª x hx, comp x (hgg' (-x) hx) (has_deriv_at_neg x),
  rw preimage_neg_Ioo at hdnf,
  rw preimage_neg_Ioo at hdng,
  have := lhopital_zero_right_on_Ioo (neg_lt_neg hab) hdnf hdng
    (by { intros x hx h,
          apply hg' _ (by {rw ‚Üê preimage_neg_Ioo at hx, exact hx}),
          rwa [mul_comm, ‚Üê neg_eq_neg_one_mul, neg_eq_zero] at h })
    (hfb.comp tendsto_neg_nhds_within_Ioi_neg)
    (hgb.comp tendsto_neg_nhds_within_Ioi_neg)
    (by { simp only [neg_div_neg_eq, mul_one, mul_neg],
          exact (tendsto_congr $ Œª x, rfl).mp (hdiv.comp tendsto_neg_nhds_within_Ioi_neg) }),
  have := this.comp tendsto_neg_nhds_within_Iio,
  unfold function.comp at this,
  simpa only [neg_neg]
end

theorem lhopital_zero_left_on_Ioc
  (hff' : ‚àÄ x ‚àà Ioo a b, has_deriv_at f (f' x) x) (hgg' : ‚àÄ x ‚àà Ioo a b, has_deriv_at g (g' x) x)
  (hcf : continuous_on f (Ioc a b)) (hcg : continuous_on g (Ioc a b))
