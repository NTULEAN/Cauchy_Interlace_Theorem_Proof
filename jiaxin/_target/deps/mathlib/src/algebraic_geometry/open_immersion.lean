  (J : Type*) (obj : J ‚Üí Scheme) (map : ‚àÄ i, obj i ‚ü∂ X)
  (e‚ÇÅ : J ‚âÉ ùí∞.J) (e‚ÇÇ : ‚àÄ i, obj i ‚âÖ ùí∞.obj (e‚ÇÅ i))
  (e‚ÇÇ : ‚àÄ i, map i = (e‚ÇÇ i).hom ‚â´ ùí∞.map (e‚ÇÅ i)) : open_cover X :=
{ J := J,
