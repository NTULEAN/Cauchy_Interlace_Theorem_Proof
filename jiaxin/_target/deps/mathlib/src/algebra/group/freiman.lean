@[simp, to_additive] lemma one_apply (x : Œ±) : (1 : A ‚Üí*[n] Œ≤) x = 1 := rfl

@[simp, to_additive] lemma one_comp (f : A ‚Üí*[n] Œ≤) {hf} : (1 : B ‚Üí*[n] Œ≥).comp f hf = 1 := rfl

@[to_additive] instance : inhabited (A ‚Üí*[n] Œ≤) := ‚ü®1‚ü©

