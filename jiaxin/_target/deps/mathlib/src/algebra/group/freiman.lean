@[simp, to_additive] lemma div_apply (f g : A ‚Üí*[n] G) (x : Œ±) : (f / g) x = f x / g x := rfl

@[simp, to_additive] lemma div_comp (f‚ÇÅ f‚ÇÇ : B ‚Üí*[n] G) (g : A ‚Üí*[n] Œ≤) {hf hf‚ÇÅ hf‚ÇÇ} :
  (f‚ÇÅ / f‚ÇÇ).comp g hf = f‚ÇÅ.comp g hf‚ÇÅ / f‚ÇÇ.comp g hf‚ÇÇ :=
ext $ Œª x, rfl

