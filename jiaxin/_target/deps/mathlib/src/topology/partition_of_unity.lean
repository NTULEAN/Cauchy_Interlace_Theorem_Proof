  (hs : is_closed s) (U : Œπ ‚Üí set X) (ho : ‚àÄ i, is_open (U i)) (hf : locally_finite U)
  (hU : s ‚äÜ ‚ãÉ i, U i) :
  ‚àÉ f : bump_covering Œπ X s, (‚àÄ i, p (f i)) ‚àß f.is_subordinate U :=
begin
