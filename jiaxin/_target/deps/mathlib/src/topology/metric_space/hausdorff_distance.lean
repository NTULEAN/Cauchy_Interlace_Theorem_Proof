  { simp only [cthickening_empty, Union_false, Union_empty] },
  refine subset.antisymm (Œª x hx, _) (Union‚ÇÇ_subset $ Œª x hx, closed_ball_subset_cthickening hx _),
  obtain ‚ü®y, yE, hy‚ü© : ‚àÉ y ‚àà E, emetric.inf_edist x E = edist x y :=
    hE.exists_inf_edist_eq_edist hne _,
