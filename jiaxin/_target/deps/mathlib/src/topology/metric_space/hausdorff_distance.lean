  x ‚àà thickening Œ¥ E ‚Üî (‚àÉ z ‚àà E, dist x z < Œ¥) :=
begin
  have key_iff : ‚àÄ (z : X), edist x z < ennreal.of_real Œ¥ ‚Üî dist x z < Œ¥,
  { intros z,
    rw dist_edist,
    have d_lt_top : edist x z < ‚àû, by simp only [edist_dist, ennreal.of_real_lt_top],
    have key := (@ennreal.of_real_lt_of_real_iff_of_nonneg
                ((edist x z).to_real) Œ¥ (ennreal.to_real_nonneg)),
    rwa ennreal.of_real_to_real d_lt_top.ne at key, },
  simp_rw [mem_thickening_iff_exists_edist_lt, key_iff],
end

@[simp] lemma thickening_singleton (Œ¥ : ‚Ñù) (x : X) :
  thickening Œ¥ ({x} : set X) = ball x Œ¥ :=
by { ext, simp [mem_thickening_iff] }

