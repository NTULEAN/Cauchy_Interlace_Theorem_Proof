/-- In a separable space, a family of nonempty disjoint open sets is countable. -/
lemma _root_.set.pairwise_disjoint.countable_of_is_open [separable_space Œ±] {Œπ : Type*}
  {s : Œπ ‚Üí set Œ±} {a : set Œπ} (h : a.pairwise_disjoint s) (ha : ‚àÄ i ‚àà a, is_open (s i))
  (h'a : ‚àÄ i ‚àà a, (s i).nonempty) :
  countable a :=
begin
  rcases eq_empty_or_nonempty a with rfl|H, { exact countable_empty },
  haveI : inhabited Œ±,
  { choose i ia using H,
    choose y hy using h'a i ia,
    exact ‚ü®y‚ü© },
  rcases exists_countable_dense Œ± with ‚ü®u, u_count, u_dense‚ü©,
  have : ‚àÄ i, i ‚àà a ‚Üí ‚àÉ y, y ‚àà s i ‚à© u :=
    Œª i hi, dense_iff_inter_open.1 u_dense (s i) (ha i hi) (h'a i hi),
  choose! f hf using this,
  have f_inj : inj_on f a,
  { assume i hi j hj hij,
    have : ¬¨disjoint (s i) (s j),
    { rw not_disjoint_iff_nonempty_inter,
      refine ‚ü®f i, (hf i hi).1, _‚ü©,
      rw hij,
      exact (hf j hj).1 },
    contrapose! this,
    exact h hi hj this },
  apply countable_of_injective_of_countable_image f_inj,
  apply u_count.mono _,
  exact image_subset_iff.2 (Œª i hi, (hf i hi).2)
end

/-- In a separable space, a family of disjoint sets with nonempty interiors is countable. -/
lemma _root_.set.pairwise_disjoint.countable_of_nonempty_interior [separable_space Œ±] {Œπ : Type*}
  {s : Œπ ‚Üí set Œ±} {a : set Œπ} (h : a.pairwise_disjoint s)
  (ha : ‚àÄ i ‚àà a, (interior (s i)).nonempty) :
  countable a :=
(h.mono $ Œª i, interior_subset).countable_of_is_open (Œª i hi, is_open_interior) ha

