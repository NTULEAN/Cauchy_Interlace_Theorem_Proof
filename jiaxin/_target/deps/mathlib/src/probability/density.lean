/-! **Uniform Distribution** -/

/-- A random variable `X` has uniform distribution if it has a probability density function `f`
with support `s` such that `f = (Œº s)‚Åª¬π 1‚Çõ` a.e. where `1‚Çõ` is the indicator function for `s`. -/
def is_uniform {m : measurable_space Œ±} (X : Œ± ‚Üí E) (support : set E)
  (‚Ñô : measure Œ±) (Œº : measure E . volume_tac) :=
pdf X ‚Ñô Œº =·µê[Œº] support.indicator ((Œº support)‚Åª¬π ‚Ä¢ 1)

namespace is_uniform

lemma has_pdf {m : measurable_space Œ±} {X : Œ± ‚Üí E} {‚Ñô : measure Œ±} {Œº : measure E}
  {support : set E} (hns : Œº support ‚â† 0) (hnt : Œº support ‚â† ‚ä§) (hu : is_uniform X support ‚Ñô Œº) :
  has_pdf X ‚Ñô Œº :=
has_pdf_of_pdf_ne_zero
begin
  intro hpdf,
  rw [is_uniform, hpdf] at hu,
  suffices : Œº (support ‚à© function.support ((Œº support)‚Åª¬π ‚Ä¢ 1)) = 0,
  { have heq : function.support ((Œº support)‚Åª¬π ‚Ä¢ (1 : E ‚Üí ‚Ñù‚â•0‚àû)) = set.univ,
    { ext x,
      rw [function.mem_support],
      simp [hnt] },
    rw [heq, set.inter_univ] at this,
    exact hns this },
  exact set.indicator_ae_eq_zero hu.symm,
end

lemma pdf_to_real_ae_eq {m : measurable_space Œ±}
  {X : Œ± ‚Üí E} {‚Ñô : measure Œ±} {Œº : measure E} {s : set E} (hX : is_uniform X s ‚Ñô Œº) :
  (Œª x, (pdf X ‚Ñô Œº x).to_real) =·µê[Œº]
  (Œª x, (s.indicator ((Œº s)‚Åª¬π ‚Ä¢ (1 : E ‚Üí ‚Ñù‚â•0‚àû)) x).to_real) :=
filter.eventually_eq.fun_comp hX ennreal.to_real

variables [is_finite_measure ‚Ñô] {X : Œ± ‚Üí ‚Ñù}
