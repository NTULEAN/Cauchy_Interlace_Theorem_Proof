{ functor := to_pi_fork_functor I,
  inverse := of_pi_fork_functor I,
  unit_iso := nat_iso.of_components (Œª K, cones.ext (iso.refl _) (by rintros (_|_); dsimp; simp))
    (Œª K‚ÇÅ K‚ÇÇ f, by { ext, simp }),
  counit_iso := nat_iso.of_components (Œª K, fork.ext (iso.refl _) (by { ext, dsimp, simp }))
    (Œª K‚ÇÅ K‚ÇÇ f, by { ext, simp }) }

