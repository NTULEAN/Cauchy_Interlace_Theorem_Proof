/-- `multifork.to_pi_fork` is functorial. -/
@[simps] noncomputable
def to_pi_fork_functor : multifork I ‚•§ fork I.fst_pi_map I.snd_pi_map :=
{ obj := multifork.to_pi_fork, map := Œª K‚ÇÅ K‚ÇÇ f, { hom := f.hom } }

