def is_colimit.mk
  (desc : Œ† (E : multicofork I), K.X ‚ü∂ E.X)
  (fac : ‚àÄ (E : multicofork I) (i : I.R), K.œÄ i ‚â´ desc E = E.œÄ i)
  (uniq : ‚àÄ (E : multicofork I) (m : K.X ‚ü∂ E.X),
    (‚àÄ i : I.R, K.œÄ i ‚â´ m = E.œÄ i) ‚Üí m = desc E) : is_colimit K :=
{ desc := desc,
  fac' := begin
