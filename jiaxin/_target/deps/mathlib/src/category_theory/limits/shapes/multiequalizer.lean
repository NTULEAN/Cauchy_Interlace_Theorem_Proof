variables {C : Type u} [category.{v} C]

/-- A multifork is a cone over a multicospan. -/
@[nolint has_inhabited_instance]
abbreviation multifork (I : multicospan_index C) := cone I.multicospan

/-- A multicofork is a cocone over a multispan. -/
@[nolint has_inhabited_instance]
abbreviation multicofork (I : multispan_index C) := cocone I.multispan

namespace multifork

variables {I : multicospan_index C} (K : multifork I)

/-- The maps from the cone point of a multifork to the objects on the left. -/
def Œπ (a : I.L) : K.X ‚ü∂ I.left a :=
K.œÄ.app (walking_multicospan.left _)

@[simp] lemma Œπ_eq_app_left (a) : K.Œπ a = K.œÄ.app (walking_multicospan.left _) := rfl

@[simp] lemma app_left_fst (b) :
  K.œÄ.app (walking_multicospan.left (I.fst_to b)) ‚â´ I.fst b =
    K.œÄ.app (walking_multicospan.right b) :=
by { rw ‚Üê K.w (walking_multicospan.hom.fst b), refl }

@[simp] lemma app_left_snd (b) :
  K.œÄ.app (walking_multicospan.left (I.snd_to b)) ‚â´ I.snd b =
    K.œÄ.app (walking_multicospan.right b) :=
by { rw ‚Üê K.w (walking_multicospan.hom.snd b), refl }

/-- Construct a multifork using a collection `Œπ` of morphisms. -/
@[simps]
def of_Œπ (I : multicospan_index C) (P : C) (Œπ : Œ† a, P ‚ü∂ I.left a)
  (w : ‚àÄ b, Œπ (I.fst_to b) ‚â´ I.fst b = Œπ (I.snd_to b) ‚â´ I.snd b) :
  multifork I :=
{ X := P,
  œÄ :=
  { app := Œª x,
    match x with
    | walking_multicospan.left a := Œπ _
    | walking_multicospan.right b := Œπ (I.fst_to b) ‚â´ I.fst b
    end,
    naturality' := begin
      rintros (_|_) (_|_) (_|_|_),
      any_goals { symmetry, dsimp, rw category.id_comp, apply category.comp_id },
      { dsimp, rw category.id_comp, refl },
      { dsimp, rw category.id_comp, apply w }
    end } }

@[reassoc]
lemma condition (b) :
  K.Œπ (I.fst_to b) ‚â´ I.fst b = K.Œπ (I.snd_to b) ‚â´ I.snd b := by simp

/-- This definition provides a convenient way to show that a multifork is a limit. -/
@[simps]
def is_limit.mk
  (lift : Œ† (E : multifork I), E.X ‚ü∂ K.X)
  (fac : ‚àÄ (E : multifork I) (i : I.L), lift E ‚â´ K.Œπ i = E.Œπ i)
  (uniq : ‚àÄ (E : multifork I) (m : E.X ‚ü∂ K.X),
    (‚àÄ i : I.L, m ‚â´ K.Œπ i = E.Œπ i) ‚Üí m = lift E) : is_limit K :=
{ lift := lift,
  fac' := begin
    rintros E (a|b),
    { apply fac },
    { rw [‚Üê E.w (walking_multicospan.hom.fst b), ‚Üê K.w (walking_multicospan.hom.fst b),
        ‚Üê category.assoc],
      congr' 1,
      apply fac }
  end,
  uniq' := begin
    rintros E m hm,
    apply uniq,
    intros i,
    apply hm,
  end }


variables [has_product I.left] [has_product I.right]

@[simp, reassoc]
lemma pi_condition :
  pi.lift K.Œπ ‚â´ I.fst_pi_map = pi.lift K.Œπ ‚â´ I.snd_pi_map := by { ext, simp }

/-- Given a multifork, we may obtain a fork over `‚àè I.left ‚áâ ‚àè I.right`. -/
@[simps X] noncomputable
def to_pi_fork (K : multifork I) : fork I.fst_pi_map I.snd_pi_map :=
{ X := K.X,
  œÄ :=
  { app := Œª x,
    match x with
    | walking_parallel_pair.zero := pi.lift K.Œπ
    | walking_parallel_pair.one := pi.lift K.Œπ ‚â´ I.fst_pi_map
    end,
    naturality' :=
    begin
      rintros (_|_) (_|_) (_|_|_),
      any_goals { symmetry, dsimp, rw category.id_comp, apply category.comp_id },
      all_goals { change ùüô _ ‚â´ _ ‚â´ _ = pi.lift _ ‚â´ _, simp }
    end } }

@[simp] lemma to_pi_fork_œÄ_app_zero :
  K.to_pi_fork.œÄ.app walking_parallel_pair.zero = pi.lift K.Œπ := rfl

@[simp] lemma to_pi_fork_œÄ_app_one :
  K.to_pi_fork.œÄ.app walking_parallel_pair.one = pi.lift K.Œπ ‚â´ I.fst_pi_map := rfl

variable (I)

/-- Given a fork over `‚àè I.left ‚áâ ‚àè I.right`, we may obtain a multifork. -/
@[simps X] noncomputable
def of_pi_fork (c : fork I.fst_pi_map I.snd_pi_map) : multifork I :=
{ X := c.X,
  œÄ :=
  { app := Œª x,
    match x with
    | walking_multicospan.left a := c.Œπ ‚â´ pi.œÄ _ _
    | walking_multicospan.right b := c.Œπ ‚â´ I.fst_pi_map ‚â´ pi.œÄ _ _
    end,
    naturality' :=
    begin
      rintros (_|_) (_|_) (_|_|_),
      any_goals { symmetry, dsimp, rw category.id_comp, apply category.comp_id },
      { change ùüô _ ‚â´ _ ‚â´ _ = (_ ‚â´ _) ‚â´ _, simp },
      { change ùüô _ ‚â´ _ ‚â´ _ = (_ ‚â´ _) ‚â´ _, rw c.condition_assoc, simp }
    end } }

@[simp] lemma of_pi_fork_œÄ_app_left (c : fork I.fst_pi_map I.snd_pi_map) (a) :
  (of_pi_fork I c).œÄ.app (walking_multicospan.left a) = c.Œπ ‚â´ pi.œÄ _ _ := rfl

