  (I : Œ† d, colimit (F ‚ãô coyoneda.obj (op d)) ‚âÖ punit) : final F :=
‚ü®Œª d, begin
  haveI : nonempty (structured_arrow d F),
  { have := (I d).inv punit.star,
    obtain ‚ü®j, y, rfl‚ü© := limits.types.jointly_surjective' this,
    exact ‚ü®structured_arrow.mk y‚ü©, },
