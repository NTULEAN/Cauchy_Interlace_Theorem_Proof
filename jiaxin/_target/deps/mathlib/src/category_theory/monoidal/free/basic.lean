@[derive inhabited]
inductive free_monoidal_category : Type u
| of : C ‚Üí free_monoidal_category
| unit : free_monoidal_category
| tensor : free_monoidal_category ‚Üí free_monoidal_category ‚Üí free_monoidal_category

