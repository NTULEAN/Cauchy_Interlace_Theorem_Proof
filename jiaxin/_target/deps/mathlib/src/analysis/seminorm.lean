end

lemma cont_normed_space_to_with_seminorms (E) [semi_normed_group E] [normed_space ùïú E]
  [uniform_space F] [uniform_add_group F]
  (q : Œπ ‚Üí seminorm ùïú F) [with_seminorms q] (f : E ‚Üí‚Çó[ùïú] F)
