def gauge (s : set E) (x : E) : ‚Ñù := Inf {r : ‚Ñù | 0 < r ‚àß x ‚àà r ‚Ä¢ s}

variables {s t : set E} {a : ‚Ñù} {x : E}

lemma gauge_def : gauge s x = Inf {r ‚àà set.Ioi 0 | x ‚àà r ‚Ä¢ s} := rfl

