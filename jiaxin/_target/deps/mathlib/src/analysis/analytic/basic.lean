/-!
### Uniqueness of power series
If a function `f : E ‚Üí F` has two representations as power series at a point `x : E`, corresponding
to formal multilinear series `p‚ÇÅ` and `p‚ÇÇ`, then these representations agree term-by-term. That is,
for any `n : ‚Ñï` and `y : E`,  `p‚ÇÅ n (Œª i, y) = p‚ÇÇ n (Œª i, y)`. In the one-dimensional case, when
`f : ùïú ‚Üí E`, the continuous multilinear maps `p‚ÇÅ n` and `p‚ÇÇ n` are given by
`formal_multilinear_series.mk_pi_field`, and hence are determined completely by the value of
`p‚ÇÅ n (Œª i, 1)`, so `p‚ÇÅ = p‚ÇÇ`. Consequently, the radius of convergence for one series can be
transferred to the other.
-/

section uniqueness

open continuous_multilinear_map

lemma asymptotics.is_O.continuous_multilinear_map_apply_eq_zero {n : ‚Ñï} {p : E [√ón]‚ÜíL[ùïú] F}
  (h : is_O (Œª y, p (Œª i, y)) (Œª y, ‚à•y‚à• ^ (n + 1)) (ùìù 0)) (y : E) :
  p (Œª i, y) = 0 :=
begin
  obtain ‚ü®c, c_pos, hc‚ü© := h.exists_pos,
  obtain ‚ü®t, ht, t_open, z_mem‚ü© := eventually_nhds_iff.mp (is_O_with_iff.mp hc),
  obtain ‚ü®Œ¥, Œ¥_pos, Œ¥Œµ‚ü© := (metric.is_open_iff.mp t_open) 0 z_mem,
  clear h hc z_mem,
  cases n,
  { exact norm_eq_zero.mp (by simpa only [fin0_apply_norm, norm_eq_zero, norm_zero, zero_pow',
      ne.def, nat.one_ne_zero, not_false_iff, mul_zero, norm_le_zero_iff]
      using ht 0 (Œ¥Œµ (metric.mem_ball_self Œ¥_pos))), },
  { refine or.elim (em (y = 0)) (Œª hy, by simpa only [hy] using p.map_zero) (Œª hy, _),
    replace hy := norm_pos_iff.mpr hy,
    refine norm_eq_zero.mp (le_antisymm (le_of_forall_pos_le_add (Œª Œµ Œµ_pos, _)) (norm_nonneg _)),
    have h‚ÇÄ := mul_pos c_pos (pow_pos hy (n.succ + 1)),
    obtain ‚ü®k, k_pos, k_norm‚ü© := normed_field.exists_norm_lt ùïú
      (lt_min (mul_pos Œ¥_pos (inv_pos.mpr hy)) (mul_pos Œµ_pos (inv_pos.mpr h‚ÇÄ))),
    have h‚ÇÅ : ‚à•k ‚Ä¢ y‚à• < Œ¥,
    { rw norm_smul,
      exact inv_mul_cancel_right‚ÇÄ hy.ne.symm Œ¥ ‚ñ∏ mul_lt_mul_of_pos_right
        (lt_of_lt_of_le k_norm (min_le_left _ _)) hy },
    have h‚ÇÇ := calc
      ‚à•p (Œª i, k ‚Ä¢ y)‚à• ‚â§ c * ‚à•k ‚Ä¢ y‚à• ^ (n.succ + 1)
                       : by simpa only [normed_field.norm_pow, norm_norm]
                           using ht (k ‚Ä¢ y) (Œ¥Œµ (mem_ball_zero_iff.mpr h‚ÇÅ))
      ...              = ‚à•k‚à• ^ n.succ * (‚à•k‚à• * (c * ‚à•y‚à• ^ (n.succ + 1)))
                       : by { simp only [norm_smul, mul_pow], rw pow_succ, ring },
    have h‚ÇÉ : ‚à•k‚à• * (c * ‚à•y‚à• ^ (n.succ + 1)) < Œµ, from inv_mul_cancel_right‚ÇÄ h‚ÇÄ.ne.symm Œµ ‚ñ∏
      mul_lt_mul_of_pos_right (lt_of_lt_of_le k_norm (min_le_right _ _)) h‚ÇÄ,
    calc ‚à•p (Œª i, y)‚à• = ‚à•(k‚Åª¬π) ^ n.succ‚à• * ‚à•p (Œª i, k ‚Ä¢ y)‚à•
        : by simpa only [inv_smul_smul‚ÇÄ (norm_pos_iff.mp k_pos),
            norm_smul, finset.prod_const, finset.card_fin] using
            congr_arg norm (p.map_smul_univ (Œª (i : fin n.succ), k‚Åª¬π) (Œª (i : fin n.succ), k ‚Ä¢ y))
    ...              ‚â§ ‚à•(k‚Åª¬π) ^ n.succ‚à• * (‚à•k‚à• ^ n.succ * (‚à•k‚à• * (c * ‚à•y‚à• ^ (n.succ + 1))))
        : mul_le_mul_of_nonneg_left h‚ÇÇ (norm_nonneg _)
    ...              = ‚à•(k‚Åª¬π * k) ^ n.succ‚à• * (‚à•k‚à• * (c * ‚à•y‚à• ^ (n.succ + 1)))
        : by { rw ‚Üêmul_assoc, simp [normed_field.norm_mul, mul_pow] }
    ...              ‚â§ 0 + Œµ
