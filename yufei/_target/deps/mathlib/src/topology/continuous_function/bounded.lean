      rcases metric.mem_closure_iff.1 hf (Œµ/2/2) (half_pos (half_pos Œµ0)) with ‚ü®g, gA, dist_fg‚ü©,
      replace dist_fg := Œª x, lt_of_le_of_lt (dist_coe_le_dist x) dist_fg,
