module.of_core $
{ smul     := (‚Ä¢),
  smul_add := Œª c f‚ÇÅ f‚ÇÇ, ext $ Œª x, smul_add _ _ _,
  add_smul := Œª c‚ÇÅ c‚ÇÇ f, ext $ Œª x, add_smul _ _ _,
  mul_smul := Œª c‚ÇÅ c‚ÇÇ f, ext $ Œª x, mul_smul _ _ _,
