@[simp] lemma coe_norm_comp : (f.norm_comp : Œ± ‚Üí ‚Ñù) = norm ‚àò f := rfl

@[simp] lemma norm_norm_comp : ‚à•f.norm_comp‚à• = ‚à•f‚à• :=
