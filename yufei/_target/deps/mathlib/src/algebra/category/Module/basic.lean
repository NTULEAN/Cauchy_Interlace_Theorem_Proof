@[simps]
def linear_equiv.to_Module_iso'_right {g‚ÇÅ : add_comm_group X‚ÇÅ} {m‚ÇÅ : module R X‚ÇÅ}
  {X‚ÇÇ : Module.{v} R} (e : X‚ÇÅ ‚âÉ‚Çó[R] X‚ÇÇ) : Module.of R X‚ÇÅ ‚âÖ X‚ÇÇ :=
{ hom := (e : X‚ÇÅ ‚Üí‚Çó[R] X‚ÇÇ),
  inv := (e.symm : X‚ÇÇ ‚Üí‚Çó[R] X‚ÇÅ),
