{ hom := ùüô M, inv := ùüô M }

instance : subsingleton (of R punit) :=
by { rw coe_of R punit, apply_instance }

instance : has_zero_object (Module.{v} R) :=
{ zero := 0,
  unique_to := Œª X,
  { default := (0 : punit ‚Üí‚Çó[R] X),
    uniq := Œª _, linear_map.ext $ Œª x,
