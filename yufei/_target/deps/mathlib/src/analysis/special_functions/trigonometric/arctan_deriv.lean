lemma has_strict_deriv_at_arctan (x : ‚Ñù) : has_strict_deriv_at arctan (1 / (1 + x^2)) x :=
have A : cos (arctan x) ‚â† 0 := (cos_arctan_pos x).ne',
by simpa [cos_sq_arctan]
