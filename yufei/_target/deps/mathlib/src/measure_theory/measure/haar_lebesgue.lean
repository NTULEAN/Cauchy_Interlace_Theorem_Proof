  (t : set E) (ht : measurable_set t) (h't : Œº t ‚â† 0) (h''t : Œº t ‚â† ‚àû) :
  tendsto (Œª (r : ‚Ñù), Œº (s ‚à© ({x} + r ‚Ä¢ t)) / Œº ({x} + r ‚Ä¢ t)) (ùìù[>] 0) (ùìù 1) :=
begin
